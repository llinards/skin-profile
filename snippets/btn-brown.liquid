<a
  href="{{ url | default: '#' }}"
  {% if new_tab %}
    target="_blank" rel="noopener noreferrer"
    aria-label="{{ text }} ({{ 'general.new_window' | t }})"
  {% endif %}
  class="inline-block text-white bg-sp-brown border border-sp-brown hover:bg-white hover:sp-brown fill-white hover:fill-sp-brown transition-all duration-300 uppercase rounded-xl py-3 px-4 tracking-wider {% if full_width %}w-full text-center{% endif %}"
>
  <span class="flex items-center justify-center gap-x-2 ">
    {{ text }}
  </span>
</a>
