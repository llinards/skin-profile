{%- assign services = services | default: section.blocks -%}
<div class="space-y-2 border-b-2">
  {%- if show_headers != false -%}
    <div class="grid grid-cols-2 py-2 font-bold border-b-1 border-sp-light-brown border-dotted">
      <div class="text-left">{{ left_label | default: 'Pakalpojums' }}</div>
      <div class="text-right">{{ right_label | default: 'Pakalpojumu cena' }}</div>
    </div>
  {%- endif -%}

  {%- if services and services.size > 0 -%}
    {%- for item in services -%}
      {%- assign name = item.settings.service_name | default: item.name | default: item.title -%}
      {%- assign price = item.settings.service_price | default: item.price -%}
      <div class="grid grid-cols-2 py-2 border-b-1 border-sp-light-brown border-dotted">
        <div class="text-left">{{ name }}</div>
        <div class="text-right font-semibold">{{ price }}</div>
      </div>
    {%- endfor -%}
  {%- else -%}
    <div class="py-4 text-center text-gray-500 text-sm">Nav pievienotu pakalpojumu</div>
  {%- endif -%}
</div>
