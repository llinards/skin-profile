{%- assign disclaimer = disclaimer | default: '' -%}
{%- assign show_headers = show_headers | default: true -%}

{%- assign services = services | default: section.blocks -%}
<div class="space-y-2 mb-6 md:my-12">
  {%- assign service_blocks = services | where: 'type', 'service' -%}
  {%- if service_blocks.size > 0 -%}
    {%- for b in service_blocks -%}
      <div class="grid grid-cols-5 font-bold items-center py-2 border-b-1 border-sp-light-brown border-dotted">
        <div class="col-span-3 text-left">{{ b.settings.service_name }}</div>
        <div class="col-span-2 text-right">{{ b.settings.service_price }}</div>
      </div>
    {%- endfor -%}
  {%- else -%}
    <div class="py-4 text-center text-gray-500 text-sm">Nav pievienotu pakalpojumu</div>
  {%- endif -%}
  {%- if disclaimer != blank -%}
    <p class="text-gray-500 mt-6">{{ disclaimer }}</p>
  {%- endif -%}
</div>
