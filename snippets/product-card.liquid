<div class="transition-transform duration-300 ease-in-out hover:scale-105 cursor-pointer">
  {% if product.featured_image %}
    {% render 'image',
      image: product.featured_image,
      width: 300,
      height: 300,
      url: product.url,
      class: 'h-full object-bottom object-cover'
    %}
  {% endif %}
</div>
<div class="flex flex-col space-y-3 items-center justify-center">
  <h3 class="body-font text-center text-xs sm:text-sm xl:text-base xl:px-6 font-bold">
    {{ product.title | escape | link_to: product.url }}
  </h3>
  <p class="text-xs sm:text-sm">{{ product.price | money }}</p>
  {% form 'product', product, class: 'w-full' %}
    {% if product.has_only_default_variant %}
      <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
    {% else %}
      <select name="id">
        {% for variant in product.variants %}
          <option value="{{ variant.id }}">{{ variant.title }}</option>
        {% endfor %}
      </select>
    {% endif %}
    <input type="hidden" name="quantity" value="1">
    {% if product.available %}
      {% render 'btn-add-to-cart', class: 'w-full text-xs sm:text-sm xl:text-base' %}
    {% else %}
      {% render 'btn-out-of-stock', class: 'w-full text-xs sm:text-sm xl:text-base' %}
    {% endif %}
  {% endform %}
</div>
