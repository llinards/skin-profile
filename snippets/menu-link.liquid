{% comment %}
  Check if this is the Kontakti/Contacts link
  If yes, make it trigger the modal instead of navigating
{% endcomment %}
{% if link.title == 'Kontakti' or link.title == 'Contacts' %}
  <button
    x-data
    type="button"
    @click.prevent="window.dispatchEvent(new CustomEvent('open-contact-modal'))"
    class="lg:text-white text-base xl:text-lg py-1 border border-transparent hover:border-b-white transition-all duration-300 cursor-pointer leading-tight {{ invert_class }}"
  >
    {{- link.title -}}
  </button>
{% elsif is_footer and link.url contains '/company-details' %}
  <button
    x-data
    type="button"
    @click.prevent="window.dispatchEvent(new CustomEvent('open-footer-contact-modal'))"
    class="lg:text-white text-base xl:text-lg py-1 border border-transparent hover:border-b-white transition-all duration-300 cursor-pointer leading-tight {{ invert_class }}"
  >
    {{- link.title -}}
  </button>
{% elsif is_footer and link.url contains '/accessibility' %}
  <button
    x-data
    type="button"
    @click.prevent="window.dispatchEvent(new CustomEvent('open-footer-accessibility-modal'))"
    class="lg:text-white text-base xl:text-lg py-1 border border-transparent hover:border-b-white transition-all duration-300 cursor-pointer leading-tight {{ invert_class }}"
  >
    {{- link.title -}}
  </button>
{% else %}
  <a
    href="{{ link.url }}"
    class="lg:text-white text-base xl:text-lg py-1 border border-transparent hover:border-b-white transition-all duration-300 cursor-pointer {% if link.active %}border-b-black lg:border-b-white{% endif %} {{ invert_class }}"
  >
    {{- link.title -}}
  </a>
{% endif %}
