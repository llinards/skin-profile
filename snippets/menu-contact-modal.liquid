{% comment %}
  Simple Modal Snippet

  Usage:
  1. Add x-data="{ showContactModal: false }" to a parent container
  2. Add the button with @click="showContactModal = true; document.body.style.overflow = 'hidden'"
  3. Include this snippet: {% render 'simple-modal' %}

  Customize the content in the "Modal content" section below
{% endcomment %}

<div
  x-show="showContactModal"
  x-cloak
  @click.self="showContactModal = false; document.body.style.overflow = 'auto'"
  class="fixed inset-0 z-51 flex items-center justify-center bg-black/50 px-4 py-8"
  x-transition:enter="transition ease-out duration-300"
  x-transition:enter-start="opacity-0"
  x-transition:enter-end="opacity-100"
  x-transition:leave="transition ease-in duration-200"
  x-transition:leave-start="opacity-100"
  x-transition:leave-end="opacity-0"
  style="display: none;"
>
  <div
    class="bg-white rounded-4xl shadow-xl w-full md:max-w-3xl max-w-lg transform relative"
    x-transition:enter="transition ease-out duration-300"
    x-transition:enter-start="opacity-0 scale-95"
    x-transition:enter-end="opacity-100 scale-100"
    x-transition:leave="transition ease-in duration-200"
    x-transition:leave-start="opacity-100 scale-100"
    x-transition:leave-end="opacity-0 scale-95"
    @click.stop
  >
    <!-- Close Button -->
    <button
      @click="showContactModal = false; document.body.style.overflow = 'auto'"
      class="
        absolute top-8 right-8 w-8 h-8 rounded-full bg-sp-brown flex items-center justify-center group
        text-white border border-sp-brown
        hover:bg-white hover:sp-brown
        active:bg-white active:sp-brown
        transition-all duration-300 z-50
      "
      aria-label="{{ 'general.modal.close' | t }}"
    >
      {% render 'icon-mobile-menu-close',
        class: 'size-6 fill-white group-hover:fill-sp-brown group-active:fill-sp-brown'
      %}
    </button>

    <!-- Modal Content - Customize this section -->
    <div class="p-8 md:p-12 space-y-6">
      <h2 class="text-2xl md:text-3xl font-bold">Kontakti</h2>

      <div class="space-y-4 text-gray-700">
        <ul class="list-none space-y-2">
          <li>{{ shop.name }}</li>
          <li>{{ shop.phone }}</li>
          <li>{{ shop.email }}</li>
          <li>Feature three</li>
        </ul>
      </div>
    </div>
  </div>
</div>
