<div class="sm:hidden mb-12" x-ref="mobileFilterWrapper">
  <div x-data="{ open: false }" class="relative">
    <button
      @click="open = !open"
      class="flex py-2 px-4 items-center uppercase rounded-full border border-gray-300 w-full justify-between cursor-pointer hover:bg-gray-50 transition-colors"
    >
      <span class="tracking-wide text-xs sm:text-sm">{{ 'collections.filters.label' | t }}</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="size-6 bg-gray-300 rounded-full p-1 transition-transform"
        :class="{ 'rotate-180': open }"
      >
        <path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5" />
      </svg>
    </button>

    <div
      x-show="open"
      @click.away="open = false"
      x-transition
      class="absolute z-20 mt-2 w-full bg-white border border-gray-300 rounded-xl shadow-lg"
      style="display: none;"
    >
      <div
        class="p-4 space-y-4"
        x-ref="filtersMobile"
        @click="if ($event.target.closest('a.filter-link')) { open = false }"
      >
        {% render 'filter-regular' %}
        {% render 'filter-sort-by' %}
        {% render 'btn-clear-filter' %}
      </div>
    </div>
  </div>
</div>
