<div class="md:hidden fixed bottom-8 right-8 z-50" x-data="{ open: false }" x-cloak>
  <div class="flex flex-col-reverse items-center space-y-0 space-y-reverse">
    <!-- Toggle Button (at the bottom) -->
    <button
      @click="open = !open"
      aria-label="AtvÄ“rt kontaktus"
    >
      <div
        class="
          p-2 rounded-full bg-sp-brown flex items-center justify-center group
          text-white bg-sp-brown border border-sp-brown hover:bg-white hover:sp-brown fill-white hover:fill-sp-brown shadow-lg cursor-pointer transition-all duration-300 active:fill-white active:text-white
        "
      >
        <span x-show="!open">
          {% render 'icon-question-mark', class: 'size-6' %}
        </span>
        <span x-show="open">
          {% render 'icon-mobile-menu-close', class: 'size-6' %}
        </span>
      </div>
    </button>

    <!-- Social Icons (appear above button) -->
    <div
      id="social-icons"
      x-show="open"
      class="
        flex flex-col items-center space-y-4 fill-white
        bg-sp-brown py-3 px-2 mb-1 rounded-full shadow-lg
        transition-all duration-300
      "

      x-transition:enter="transition ease-out duration-300"
      x-transition:enter-start="opacity-0 translate-y-4"
      x-transition:enter-end="opacity-100 translate-y-0"

      x-transition:leave="transition ease-in duration-200"
      x-transition:leave-start="opacity-100 translate-y-0"
      x-transition:leave-end="opacity-0 translate-y-4"
    >
      {% render 'icon-phone' %}
      {% render 'icon-mail' %}
      {% render 'icon-facebook' %}
      {% render 'icon-instagram' %}
      {% render 'icon-booking' %}
    </div>
  </div>
</div>
