<div class="md:hidden fixed bottom-18 right-4 z-50" x-data="{ open: false }" x-cloak>
  <div class="flex flex-col-reverse items-center space-y-0 space-y-reverse">
    <!-- Toggle Button (at the bottom) -->
    <button @click="open = !open" aria-label="{{ 'general.accessibility.open_contacts' | t }}">
      <div
        class="p-2 rounded-full border border-sp-brown bg-sp-brown text-white"
      >
        <!-- Closed Icon -->
        <span x-show="!open">
          {% render 'icon-contact', class: 'size-6' %}
        </span>

        <!-- Open/Close Icon -->
        <span x-show="open">
          {% render 'icon-mobile-menu-close', class: 'size-6 fill-white' %}
        </span>
      </div>
    </button>

    <!-- Social Icons (appear above button) -->
    <div
      id="social-icons"
      x-show="open"
      class="
        flex flex-col items-center space-y-2 fill-white
        bg-sp-brown py-3 px-2 mb-1 rounded-full shadow-lg
        transition-all duration-300
      "

      x-transition:enter="transition ease-out duration-300"
      x-transition:enter-start="opacity-0 translate-y-4"
      x-transition:enter-end="opacity-100 translate-y-0"

      x-transition:leave="transition ease-in duration-200"
      x-transition:leave-start="opacity-100 translate-y-0"
      x-transition:leave-end="opacity-0 translate-y-4"
    >
      {% if phone_number != blank %}
        <a class="block" aria-label="Call" href="tel:{{ phone_number | strip | replace: ' ', '' }}">
          {% render 'icon-phone' %}
        </a>
      {% else %}
        {% render 'icon-phone' %}
      {% endif %}

      {% if email_address != blank %}
        <a class="block" aria-label="Email" href="mailto:{{ email_address | strip }}">
          {% render 'icon-mail' %}
        </a>
      {% else %}
        {% render 'icon-mail' %}
      {% endif %}

      {% if facebook_url != blank %}
        <a class="block" aria-label="Facebook" href="{{ facebook_url }}" target="_blank" rel="noopener noreferrer">
          {% render 'icon-facebook' %}
        </a>
      {% else %}
        {% render 'icon-facebook' %}
      {% endif %}

      {% if instagram_url != blank %}
        <a class="block" aria-label="Instagram" href="{{ instagram_url }}" target="_blank" rel="noopener noreferrer">
          {% render 'icon-instagram' %}
        </a>
      {% else %}
        {% render 'icon-instagram' %}
      {% endif %}

      {% if booking_url != blank %}
        <a class="block" aria-label="Booking" href="{{ booking_url }}" target="_blank" rel="noopener noreferrer">
          {% render 'icon-booking' %}
        </a>
      {% else %}
        {% render 'icon-booking' %}
      {% endif %}
    </div>
  </div>
</div>
