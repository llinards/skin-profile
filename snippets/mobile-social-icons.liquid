<div class="md:hidden fixed bottom-8 right-8 z-50" x-data="{ open: false }" x-cloak>
  <div class="flex items-center space-x-1">
    <!-- Social Icons (slide from right to left) -->
    <div
      id="social-icons"
      x-show="open"
      class="
          flex flex-row items-center space-x-4 fill-white
          bg-sp-brown px-4 py-2 rounded-full shadow-lg
          transition-all duration-300 origin-right
         hover:sp-brown
        focus:bg-white focus:sp-brown
        active:bg-white active:sp-brown
      "

      x-transition:enter="transition ease-out duration-300"
      x-transition:enter-start="opacity-0 translate-x-4"
      x-transition:enter-end="opacity-100 translate-x-0"

      x-transition:leave="transition ease-in duration-200"
      x-transition:leave-start="opacity-100 translate-x-0"
      x-transition:leave-end="opacity-0 translate-x-4"
    >
      {% render 'icon-phone' %}
      {% render 'icon-mail' %}
      {% render 'icon-facebook' %}
      {% render 'icon-instagram' %}
      {% render 'icon-booking' %}
    </div>

    <!-- Toggle Button -->
    <button
      @click="open = !open"
      class="
        flex items-center justify-center bg-sp-brown text-white border border-sp-brown hover:sp-brown hover:bg-white transition-all cursor-pointer duration-300 px-4 py-2 rounded-full shadow-lg
        hover:sp-brown
        {% comment %} focus:bg-white focus:sp-brown
        active:bg-white active:sp-brown {% endcomment %}
      "
      aria-label="AtvÄ“rt kontaktus"
    >
      <span x-show="!open">?</span>
      <span x-show="open">X</span>
    </button>
  </div>
</div>
