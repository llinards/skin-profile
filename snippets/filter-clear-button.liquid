{%- assign clear_url = collection.url -%}
{%- if collection.sort_by -%}
  {%- assign clear_url = collection.url | append: '?sort_by=' | append: collection.sort_by -%}
{%- endif -%}

<a
  href="{{ clear_url }}"
  {% if new_tab %}
    target="_blank" rel="noopener noreferrer"
  {% endif %}
  class="flex filter-link items-center text-white bg-sp-brown border-1 border-[#885642] hover:bg-white hover:sp-brown fill-white hover:fill-sp-brown transition-all duration-300 uppercase rounded-full p-2 {% if full_width %}w-full text-center{% endif %}"
>
  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="size-6">
    <path d="M5.28 4.22a.75.75 0 0 0-1.06 1.06L6.94 8l-2.72 2.72a.75.75 0 1 0 1.06 1.06L8 9.06l2.72 2.72a.75.75 0 1 0 1.06-1.06L9.06 8l2.72-2.72a.75.75 0 0 0-1.06-1.06L8 6.94 5.28 4.22Z" />
  </svg>
</a>
