<div class="container mx-auto transition-hide space-y-2 lg:max-w-5xl px-4 flex flex-col md:flex-row md:justify-between pb-12">
  <div id="yearsOfExperience" class="text-center">
    <p class="header-font text-8xl lg:text-[140px]">{{ section.settings.years_of_experience }}+</p>
    <p class="uppercase font-bold tracking-wider">Gadu pieredze</p>
  </div>
  <div id="numberOfServices" class="text-center">
    <p class="header-font text-8xl lg:text-[140px]">{{ section.settings.number_of_services }}+</p>
    <p class="uppercase font-bold tracking-wider">Pakalapojumi</p>
  </div>
  <div id="teamMembers" class="text-center">
    <p class="header-font text-8xl lg:text-[140px]">{{ section.settings.team_members }}</p>
    <p class="uppercase font-bold tracking-wider">Pieredzējuši speciālisti</p>
  </div>
</div>

{% schema %}
{
  "name": "Sasniegumi/Par mums",
  "settings": [
    {
      "type": "text",
      "id": "years_of_experience",
      "label": "Gadu pieredze",
      "default": "10+"
    },
    {
      "type": "text",
      "id": "number_of_services",
      "label": "Pakalpojumu skaits",
      "default": "20+"
    },
    {
      "type": "number",
      "id": "team_members",
      "label": "Pieredzējuši speciālisti",
      "default": 18
    }
  ],
  "presets": [
    {
      "name": "Sasniegumi/Par mums"
    }
  ]
}
{% endschema %}
