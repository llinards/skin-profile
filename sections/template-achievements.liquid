<!-- ODOMETER.JS -->
<script src="{{ 'odometer.js' | asset_url }}" defer></script>
<link rel="stylesheet" href="{{ 'odometer-theme-minimal.css' | asset_url }}">
<script src="{{ 'counter-animation.js' | asset_url }}" defer></script>

<div
  class="
    container mx-auto stats-container transition-hide lg:max-w-5xl px-4 flex flex-col
    {% if section.settings.plus_sign %}
    md:flex-row md:justify-between
    {% else %}
     md:grid grid-cols-3
    {% endif %}
    pb-12
  "
>
  <div id="years-of-experience" class="text-center">
    <div class="flex items-baseline just text-center justify-center">
      <p id="years-of-experience-num" class="header-font text-8xl lg:text-[140px] odometer plus">
        {{ section.settings.years_of_experience }}
      </p>
      {% if section.settings.plus_sign %}
        <span class="header-font text-8xl lg:text-[140px] -translate-y-2.5 md:-translate-y-3.5">+</span>
      {% endif %}
    </div>
    <p class="uppercase font-bold tracking-wider">Gadu pieredze</p>
  </div>
  <div id="number-of-services" class="text-center">
    <div class="flex just text-center justify-center">
      <p id="number-of-services-num" class="header-font text-8xl lg:text-[140px] odometer plus">
        {{ section.settings.number_of_services }}
      </p>
      {% if section.settings.plus_sign %}
        <span class="header-font text-8xl lg:text-[140px] -translate-y-2.5 md:-translate-y-3.5">+</span>
      {% endif %}
    </div>
    <p class="uppercase font-bold tracking-wider">Pakalpojumi</p>
  </div>
  <div id="team-members" class="text-center">
    <p id="team-members-num" class="header-font text-8xl lg:text-[140px]">{{ section.settings.team_members }}</p>
    <p class="uppercase font-bold tracking-wider">Pieredzējuši speciālisti</p>
  </div>
</div>

{% schema %}
{
  "name": "Sasniegumi/Par mums",
  "settings": [
    {
      "type": "text",
      "id": "years_of_experience",
      "label": "Gadu pieredze",
      "default": "10+"
    },
    {
      "type": "text",
      "id": "number_of_services",
      "label": "Pakalpojumu skaits",
      "default": "20+"
    },
    {
      "type": "number",
      "id": "team_members",
      "label": "Pieredzējuši speciālisti",
      "default": 18
    },
    {
      "type": "checkbox",
      "id": "plus_sign",
      "label": "Pieredzējuši speciālisti",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Sasniegumi/Par mums"
    }
  ]
}
{% endschema %}
