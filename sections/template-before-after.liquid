<div class="container mx-auto px-4 pb-12 transition-hide text-center md:text-left">
  <div class="w-full md:w-1/2 flex flex-col items-center justify-center space-y-6 md:space-y-12 text-center md:text-left">
    <h2>{{ section.settings.heading }}</h2>
    {{ section.settings.text }}
    <div>
      {% for block in section.blocks %}
        {% if block.type == 'button' %}
          <div class="flex justify-center md:justify-start w-full">
            {% case block.settings.style %}
              {% when 'white' %}
                {% render 'btn-white', text: block.settings.text, url: block.settings.url %}
              {% when 'brown' %}
                {% render 'btn-brown', text: block.settings.text, url: block.settings.url %}
            {% endcase %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
  <div class="w-full md:w-1/2">
    {% if section.settings.image %}
      <img
        src="{{ section.settings.image | image_url: width: 800 }}"
        alt="{{ section.settings.alt_text | escape }}"
        width="1080"
        height="1080"
        loading="lazy"
        class="w-full h-auto object-cover rounded-lg"
      >
    {% endif %}
    <p class="uppercase">*Attēlam ir ilustratīva nozīme</p>
  </div>
</div>

{% schema %}
{
  "name": "Pirms un Pēc Sadaļa",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Virsraksts",
      "default": "Virsraksts šeit"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Teksts",
      "default": "<p>Jūsu teksts šeit.</p>"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Attēls"
    },
    {
      "type": "text",
      "id": "alt_text",
      "label": "Attēla alt teksts",
      "default": "Attēls"
    }
  ],
  "presets": [
    {
      "name": "Pirms un Pēc Sadaļa"
    }
  ]
}
{% endschema %}
