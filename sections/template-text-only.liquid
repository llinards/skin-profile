<div class="container mx-auto px-4 pb-12">
  <div class="flex flex-col md:flex-row items-start md:items-center space-y-6 md:gap-x-12 justify-center transition-hide">
    <div class="flex items-center w-full md:w-1/2 text-center md:text-left">
      <h2>{{ section.settings.heading }}</h2>
    </div>
    <div class="flex items-center w-full md:w-1/2">
      <div class="prose space-y-2 px-4 md:px-0">
        {% if section.settings.text_html != blank %}
          {{ section.settings.text_html }}
        {% else %}
          {{ section.settings.text }}
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Teksta sadaļa",
  "settings": [
    { "type": "text", "id": "heading", "label": "Virsraksts", "default": "Virsraksts šeit" },
    { "type": "richtext", "id": "text", "label": "Teksts (parasts)", "default": "<p>Jūsu teksts šeit.</p>" },
    {
      "type": "textarea",
      "id": "text_html",
      "label": "Teksts (HTML – atļauj apakšpunktus)",
      "info": "Ievadiet pilnu HTML (piemēram <ul><li>Punkts<ul><li>Apakšpunkts</li></ul></li></ul>)"
    }
  ],
  "presets": [{ "name": "Teksta sadaļa" }]
}
{% endschema %}
