<div x-show="showCompanyDetailsModal === '/company-details'" style="display: none;">
  {% render 'footer-company-details-modal' %}
</div>
<footer
  class="relative bg-black text-white py-12 md:py-24 z-11"
  x-data="{ showCompanyDetailsModal: null }"
  x-on:open-footer-contact-modal.window="showCompanyDetailsModal = '/company-details'; document.body.style.overflow = 'hidden'"
>
  <div class="container mx-auto flex flex-col justify-between px-8 md:px-4 pb-12 gap-12 sm:grid sm:grid-cols-2 md:grid-cols-3 lg:flex lg:flex-row text-white">
    <div class="order-5 md:order-4 lg:order-1 md:col-span-2">
      <div>
        <img
          src="{{ shop.brand.logo | image_url }}"
          alt="{{ shop.name }} logo"
          height="1024"
          width="1024"
          class="w-58 h-18 mb-6"
        >
        {%- if section.settings.cooperation_partners != blank -%}
          <a href="{{ section.settings.cooperation_partners.url }}" class="flex space-x-12">
        {%- else -%}
          <div class="flex space-x-12">
        {%- endif -%}
        <img
          src="{{ "finanse_eiropas_savieniba.png" | file_url }}"
          alt="Finansē Eiropas Savienība"
          class="h-28 lg:h-36 w-auto invert"
          width="540"
          height="540"
          loading="lazy"
        >
        <img
          src="{{ "nacionalais_attistibas_fonds.png" | file_url }}"
          alt="Nacionālais attīstības fonds"
          class="h-28 lg:h-36 w-auto invert"
          width="540"
          height="540"
          loading="lazy"
        >
        {%- if section.settings.cooperation_partners != blank -%}
          </a>
        {%- else -%}
          </div>
        {%- endif -%}
      </div>
    </div>
    <div class="order-1 lg:order-2">
      <h3 class="text-2xl capitalize text-white pb-1">{{ 'general.footer.menu' | t }}</h3>
      <ul class="list-none space-y-2">
        {% assign links = linklists['main-menu'].links %}
        {% for link in links %}
          <li>
            {% render 'menu-link', link: link %}
          </li>
        {% endfor %}
      </ul>
    </div>
    <div class="order-2 sm:order-3">
      <h3 class="text-2xl capitalize text-white pb-1">{{ 'general.footer.information' | t }}</h3>
      {% assign links = linklists['information-menu'].links %}
      <ul class="list-none space-y-2">
        {% for link in links %}
          <li>
            {% render 'menu-link', link: link %}
          </li>
        {% endfor %}
      </ul>
    </div>
    <div class="order-3 sm:order-2 lg:order-4">
      <h3 class="text-2xl capitalize text-white pb-1">{{ 'general.footer.contacts' | t }}</h3>
      <ul class="text-base xl:text-lg list-none space-y-2">
        {%- if shop.phone != blank -%}
          <li>
            <a
              href="tel:{{ shop.phone }}"
              class="items-center lg:text-white py-1 border border-transparent hover:border-b-white transition-all duration-300"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="currentColor"
                class="inline-block size-4 mr-1"
              >
                <path fill-rule="evenodd" d="M1.5 4.5a3 3 0 0 1 3-3h1.372c.86 0 1.61.586 1.819 1.42l1.105 4.423a1.875 1.875 0 0 1-.694 1.955l-1.293.97c-.135.101-.164.249-.126.352a11.285 11.285 0 0 0 6.697 6.697c.103.038.25.009.352-.126l.97-1.293a1.875 1.875 0 0 1 1.955-.694l4.423 1.105c.834.209 1.42.959 1.42 1.82V19.5a3 3 0 0 1-3 3h-2.25C8.552 22.5 1.5 15.448 1.5 6.75V4.5Z" clip-rule="evenodd" />
              </svg>
              {{ shop.phone }}
            </a>
          </li>
        {%- endif -%}
        {%- if shop.email != blank -%}
          <li>
            <a
              href="mailto:{{ shop.email }}"
              class="items-center lg:text-white py-1 border border-transparent hover:border-b-white transition-all duration-300"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="currentColor"
                class="inline-block size-4 mr-1"
              >
                <path d="M1.5 8.67v8.58a3 3 0 0 0 3 3h15a3 3 0 0 0 3-3V8.67l-8.928 5.493a3 3 0 0 1-3.144 0L1.5 8.67Z" />
                <path d="M22.5 6.908V6.75a3 3 0 0 0-3-3h-15a3 3 0 0 0-3 3v.158l9.714 5.978a1.5 1.5 0 0 0 1.572 0L22.5 6.908Z" />
              </svg>

              {{ shop.email }}
            </a>
          </li>
        {%- endif -%}
        {%- if shop.address != blank -%}
          <li>
            {% if shop.address %}
              {% assign map_query = shop.address.street
                | append: ', '
                | append: shop.address.city
                | append: ', '
                | append: shop.address.province
                | append: ' '
                | append: shop.address.zip
                | append: ', '
                | append: shop.address.country
              %}

              <a
                href="https://www.google.com/maps/search/?api=1&query={{ map_query | url_encode }}"
                class="items-center lg:text-white py-1 border border-transparent hover:border-b-white transition-all duration-300"
                target="_blank"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                  class="inline-block size-4 mr-1"
                >
                  <path fill-rule="evenodd" d="m11.54 22.351.07.04.028.016a.76.76 0 0 0 .723 0l.028-.015.071-.041a16.975 16.975 0 0 0 1.144-.742 19.58 19.58 0 0 0 2.683-2.282c1.944-1.99 3.963-4.98 3.963-8.827a8.25 8.25 0 0 0-16.5 0c0 3.846 2.02 6.837 3.963 8.827a19.58 19.58 0 0 0 2.682 2.282 16.975 16.975 0 0 0 1.145.742ZM12 13.5a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z" clip-rule="evenodd" />
                </svg>
                {{ shop.address.address1 }}, {{ shop.address.city }}, {{ shop.address.country_code }}-
                {{- shop.address.zip -}}
                , {{ shop.address.country }}
              </a>
            {% endif %}
          </li>
        {%- endif -%}
        {% if shop.metafields.custom.working_days and shop.metafields.custom.working_hours %}
          <li>
            <span
              class="items-center lg:text-white py-1 border border-transparent transition-all duration-300"
              target="_blank"
              rel="noopener"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="currentColor"
                class="inline-block size-4 mr-1"
              >
                <path fill-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25ZM12.75 6a.75.75 0 0 0-1.5 0v6c0 .414.336.75.75.75h4.5a.75.75 0 0 0 0-1.5h-3.75V6Z" clip-rule="evenodd" />
              </svg>

              {{ shop.metafields.custom.working_days }}
              ({{ shop.metafields.custom.working_hours }})
            </span>
          </li>
        {%- endif -%}
        {% if shop.metafields.custom.working_days_saturday and shop.metafields.custom.working_hours_saturday %}
          <li>
            <span
              class="items-center lg:text-white py-1 border border-transparent transition-all duration-300"
              target="_blank"
              rel="noopener"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="currentColor"
                class="inline-block size-4 mr-1"
              >
                <path fill-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25ZM12.75 6a.75.75 0 0 0-1.5 0v6c0 .414.336.75.75.75h4.5a.75.75 0 0 0 0-1.5h-3.75V6Z" clip-rule="evenodd" />
              </svg>

              {{ shop.metafields.custom.working_days_saturday }}
              ({{ shop.metafields.custom.working_hours_saturday }})
            </span>
          </li>
        {%- endif -%}
        {% if shop.metafields.custom.working_days_sunday and shop.metafields.custom.working_hours_sunday %}
          <li>
            <span
              class="items-center lg:text-white py-1 border border-transparent transition-all duration-300"
              target="_blank"
              rel="noopener"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="currentColor"
                class="inline-block size-4 mr-1"
              >
                <path fill-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25ZM12.75 6a.75.75 0 0 0-1.5 0v6c0 .414.336.75.75.75h4.5a.75.75 0 0 0 0-1.5h-3.75V6Z" clip-rule="evenodd" />
              </svg>

              {{ shop.metafields.custom.working_days_sunday }}
              ({{ shop.metafields.custom.working_hours_sunday }})
            </span>
          </li>
        {%- endif -%}
      </ul>
    </div>
    <div class="order-4 lg:order-5">
      <h3 class="text-2xl capitalize text-white pb-1">{{ 'general.footer.follow' | t }}</h3>
      <div class="flex flex-row fill-white space-x-6">
        {% render 'icon-facebook' %}
        {% render 'icon-instagram' %}
      </div>
    </div>
  </div>

  <div class="text-white container flex flex-col items-center justify-center mx-auto px-8 space-y-2">
    <p>{{ 'general.footer.medical_institution_code' | t }} - {{ shop.metafields.custom.medical_institution_code }}</p>
    <p>
      &copy; {{ 'now' | date: '%Y' }}
      {{ shop.name }} - {{ 'general.footer.rights' | t }}
    </p>
    {% comment %}
      <p>
        <a href="https://www.simpledesign.lv" target="_blank">
          {{- 'general.footer.design' | t }}:
          <span class="text-(--color-brand-secondary) pb-1 border-b border-transparent hover:border-b-white hover:text-white transition-all duration-300"
            >SIMPLE DESIGN</span
          ></a
        >
      </p>
      <p>
        <a href="https://www.slmedia.lv" target="_blank">
          {{- 'general.footer.developed' | t }}:
          <span class="text-(--color-brand-secondary) pb-1 border-b border-transparent hover:border-b-white hover:text-white transition-all duration-300"
            >S&L MEDIA</span
          ></a
        >
      </p>
    {% endcomment %}
  </div>
</footer>

{% schema %}
{
  "name": "t:general.footer",
  "settings": [
    { "type": "link_list", "id": "menu", "label": "t:labels.menu" },
    {
      "type": "page",
      "id": "cooperation_partners",
      "label": "Sadarbības partneri (lapa)",
      "info": "Izvēlieties lapu uz kuru ved partneru attēli"
    },
    {
      "type": "text",
      "id": "address",
      "label": "Address",
      "default": "Pils iela 13, Sigulda, Latvija"
    },
    {
      "type": "url",
      "id": "map_link",
      "label": "Google Maps Link",
      "info": "Link to Google Maps location"
    }
  ]
}
{% endschema %}
