<div class="container mx-auto px-4 mb-12 transition-hide">
  <div class="flex flex-row flex-wrap md:flex-nowrap items-center justify-center gap-y-6 md:gap-y-0 gap-x-6 md:gap-x-12">
    {% assign slide_blocks = section.blocks | where: 'type', 'slide' %}
    {% if slide_blocks.size > 0 %}
      {% for block in slide_blocks %}
        {% if block.settings.url != blank %}<a href="{{ block.settings.url }}" class="shrink-0">{% endif %}
        <img
          src="{{ block.settings.image | image_url }}"
          alt="{{ block.settings.alt | escape }}"
          width="350"
          height="350"
          loading="lazy"
          class="shrink-0 w-auto h-32 md:h-64"
        >
        {% if block.settings.url != blank %}</a>{% endif %}
      {% endfor %}
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Eiropas Projektu Logo",
  "blocks": [
    {
      "type": "slide",
      "name": "Eiropas Projektu Logo",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Attēls" },
        { "type": "text", "id": "alt", "label": "Alt teksts", "default": "Alt teksts" },
        { "type": "url", "id": "url", "label": "Saite (neobligāti)" }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [{ "name": "Eiropas Projektu Logo" }]
}
{% endschema %}
