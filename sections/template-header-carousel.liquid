<script>
  document.addEventListener('DOMContentLoaded', function () {
    const carousel = Carousel(document.getElementById('headerCarousel'), {
      fill: true,
      infinite: false,
      plugins: [window.Dots],
    }).init();
  });
</script>
<div class="home-introduction relative flex justify-center bg-black overflow-hidden">
  <div class="absolute inset-0 z-0">
    <div class="f-carousel" id="headerCarousel">
      {% for block in section.blocks %}
        <div class="f-carousel__slide relative w-full">
          <div class="absolute inset-0 bg-black/50 z-10"></div>
          <img
            src="{{ block.settings.image | image_url }}"
            alt="{{ block.settings.alt_text | escape }}"
            class="w-full h-screen object-cover"
            width=""
            height=""
          >
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<div
  class="relative bg-cover [background-position:15%_50%] md:bg-center h-screen mb-12"
  style="background-image: linear-gradient(180deg, rgba(0,0,0,1) 0%, rgba(0,0,0,0.0) 10%), linear-gradient(rgba(0, 0, 0, 0.2) 10%, rgba(0, 0, 0, 0.2)), url('{{ section.settings.bg_image | image_url: width: 2000 }}');"
>
  <div class="container mx-auto px-4 sm:px-6 h-full flex">
    <div class="flex flex-col justify-center h-full md:w-3/5 lg:items-start">
      <div class="space-y-6">
        {% render 'social-icons' %}
        <h1 class="flex md:leading-18 text-white">
          {{ section.settings.heading }}
        </h1>
        <div class="text-white prose prose-invert">
          {{ section.settings.subtext }}
        </div>
        <div class="flex flex-col gap-4 w-full">
          {% for block in section.blocks %}
            {% if block.type == 'button' %}
              <div class="flex justify-center md:justify-start w-full">
                {% case block.settings.style %}
                  {% when 'white' %}
                    {% render 'btn-white', text: block.settings.text, url: block.settings.url %}
                  {% when 'brown' %}
                    {% render 'btn-brown', text: block.settings.text, url: block.settings.url %}
                  {% when 'ai' %}
                    {% render 'btn-brown-ai', text: block.settings.text, url: block.settings.url %}
                {% endcase %}
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Galvene ar karuseli",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Virsraksts",
      "default": "Medicīniskā estētika, lāzerdermatoloģija, dermatoloģija"
    },
    {
      "type": "richtext",
      "id": "subtext",
      "label": "Teksts",
      "default": "<p>Mūsdienīgs dermatoloģijas un estētiskās medicīnas centrs Siguldā – ar jaunākajām tehnoloģijām, profesionālu aprūpi un individuālu pieeju katram pacientam.</p>"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Bilde",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Bilde"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt teksts",
          "info": "Apraksts attēlam (svarīgi pieejamībai un SEO)"
        }
      ]
    },
    {
      "type": "button",
      "name": "Poga",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Uzzināt vairāk",
          "default": "Button"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Button link"
        },
        {
          "type": "select",
          "id": "style",
          "label": "Pogas veids",
          "options": [
            { "value": "white", "label": "Balta" },
            { "value": "brown", "label": "Brūna" },
            { "value": "ai", "label": "AI" }
          ],
          "default": "white"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Galvenes sadaļa ar karuseli",
      "blocks": [
        { "type": "button", "settings": { "text": "Pakalpojumi", "url": "/pages/services", "style": "white" } },
        { "type": "button", "settings": { "text": "Virtuālais konsultants", "url": "#", "style": "brown" } }
      ]
    }
  ]
}
{% endschema %}
