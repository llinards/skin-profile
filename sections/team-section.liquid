<script>
  document.addEventListener('DOMContentLoaded', function () {
    Carousel(document.getElementById('teamCarousel'), {}).init();
  });
</script>

<div class="container mx-auto">
  <h2>{{ section.settings.heading }}</h2>
  <div class="py-12 f-carousel" id="teamCarousel">
    {% for block in section.blocks %}
      <div class="f-carousel__slide text-center">
        {% if block.settings.photo %}
          <img
            src="{{ block.settings.photo | image_url: width: 400 }}"
            alt="{{ block.settings.name | escape }}"
            class="mx-auto rounded-full mb-4"
            width="200"
            height="200"
            loading="lazy"
          >
        {% endif %}
        <div class="font-bold text-lg">{{ block.settings.name }}</div>
        <div class="text-sm text-gray-500">{{ block.settings.position }}</div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Team Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Meet Our Team"
    }
  ],
  "blocks": [
    {
      "type": "member",
      "name": "Team Member",
      "settings": [
        {
          "type": "image_picker",
          "id": "photo",
          "label": "Photo"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Name"
        },
        {
          "type": "text",
          "id": "position",
          "label": "Position"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Team Section",
      "blocks": [
        {
          "type": "member",
          "settings": {
            "name": "Jane Doe",
            "position": "Founder"
          }
        }
      ]
    }
  ]
}
{% endschema %}
