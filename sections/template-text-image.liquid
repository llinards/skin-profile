<div class="px-4 pb-12 container mx-auto transition-hide text-center md:text-left bg-sp-light-brown">
  <div class="w-3/5">
    <h2>{{ section.settings.heading }}</h2>
    <div class="space-y-2">
      {{ section.settings.text }}
    </div>
  </div>

  <div class="w-2/5">
    {% if section.settings.photo %}
      <img
        src="{{ section.settings.photo | image_url }}"
        alt="{{ section.settings.alt | escape }}"
        width="1080"
        height="1920"
        loading="lazy"
        class="rounded-4xl h-108 object-top object-cover transition-transform duration-300 ease-in-out hover:scale-105"
      >
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Virsraksts",
      "default": "Virsraksts šeit"
    },
    {
      "type": "text",
      "id": "alt",
      "label": "Bildes alt teksts",
      "default": "Bildes alt teksts šeit"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Teksts",
      "default": "<p>Jūsu teksts šeit.</p>"
    },
    {
      "type": "image_picker",
      "id": "photo",
      "label": "Foto"
    }
  ]
}
{% endschema %}
