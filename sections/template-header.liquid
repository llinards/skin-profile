<div
  class="
    relative bg-cover h-screen mb-12
    {% case section.settings.bg_pos_mobile %}
      {% when 'left-15' %} bg-position-[-15%]
      {% when 'left' %} bg-right
      {% when 'right-15' %} bg-position-[15%]
      {% when 'right' %} bg-left
      {% when 'center' %} bg-center
    {% endcase %}
    {% case section.settings.bg_pos_desktop %}
      {% when 'left-50' %} md:bg-position-[-15%]
      {% when 'left' %} md:bg-right
      {% when 'right-50' %} md:bg-position-[15%]
      {% when 'right' %} md:bg-left
      {% when 'center' %} md:bg-center
    {% endcase %}
  "
  style="background-image: linear-gradient(180deg, rgba(0,0,0,1) 0%, rgba(0,0,0,0.0) 10%), linear-gradient(rgba(0, 0, 0, 0.2) 10%, rgba(0, 0, 0, 0.2)), url('{{ section.settings.bg_image | image_url: width: 2000 }}');"
>
  {% if section.settings.bg_image != blank %}
    <img
      src="{{ section.settings.bg_image | image_url: width: 2000 }}"
      alt="{{ section.settings.bg_alt | escape }}"
      class="sr-only"
      loading="lazy"
      width="1920"
      height="1080"
    >
  {% endif %}

  <div class="container mx-auto px-4 sm:px-6 h-full flex">
    <div class="flex flex-col justify-center h-full md:w-3/5 lg:items-start">
      <div class="space-y-6">
        {% render 'social-icons' %}

        {%- assign heading_align = section.settings.heading_align | default: 'center' -%}
        {%- case heading_align -%}
          {%- when 'left' -%}
            {%- assign heading_align_class = 'text-left' -%}
          {%- when 'right' -%}
            {%- assign heading_align_class = 'text-right' -%}
          {%- else -%}
            {%- assign heading_align_class = 'text-center' -%}
        {%- endcase -%}

        <!-- H1 from settings -->
        <h1 class="text-white flex md:leading-18 {{ heading_align_class }}">
          {{ section.settings.heading | default: 'Medicīniskā estētika, lāzerdermatoloģija, dermatoloģija' }}
        </h1>

        <!-- Subtext from settings -->
        {% if section.settings.subtext != blank %}
          <div class="text-white prose prose-invert">
            {{ section.settings.subtext }}
          </div>
        {% endif %}

        {%- comment -%} Button placement (justify-start/center/end on mobile and desktop) {%- endcomment -%}
        {%- assign btn_m = section.settings.button_align_mobile | default: 'center' -%}
        {%- assign btn_d = section.settings.button_align_desktop | default: 'start' -%}
        {%- case btn_m -%}
          {%- when 'start' -%}
            {%- assign btn_class_m = 'justify-start' -%}
          {%- when 'end' -%}
            {%- assign btn_class_m = 'justify-end' -%}
          {%- else -%}
            {%- assign btn_class_m = 'justify-center' -%}
        {%- endcase -%}
        {%- case btn_d -%}
          {%- when 'start' -%}
            {%- assign btn_class_d = 'md:justify-start' -%}
          {%- when 'end' -%}
            {%- assign btn_class_d = 'md:justify-end' -%}
          {%- else -%}
            {%- assign btn_class_d = 'md:justify-center' -%}
        {%- endcase -%}

        <div class="flex flex-col gap-4 w-full">
          {% for block in section.blocks %}
            {% if block.type == 'button' %}
              <div class="flex {{ btn_class_m }} {{ btn_class_d }} w-full">
                {% case block.settings.style %}
                  {% when 'white' -%}
                    {%- render 'btn-white', text: block.settings.text, url: block.settings.url %}
                  {% when 'brown' -%}
                    {%- render 'btn-brown', text: block.settings.text, url: block.settings.url %}
                  {% when 'ai' -%}
                    {%- render 'btn-brown-ai', text: block.settings.text, url: block.settings.url %}
                {% endcase %}
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Galvenes sadaļa",
  "settings": [
    { "type": "image_picker", "id": "bg_image", "label": "Fona bilde" },
    {
      "type": "text",
      "id": "bg_alt",
      "label": "Alt teksts fona bildei",
      "info": "Ja attēls ir dekoratīvs, atstājiet tukšu."
    },

    { "type": "header", "content": "Virsraksts un teksts" },
    {
      "type": "text",
      "id": "heading",
      "label": "Virsraksts (H1)",
      "default": "Medicīniskā estētika, lāzerdermatoloģija, dermatoloģija"
    },
    {
      "type": "richtext",
      "id": "subtext",
      "label": "Apraksts (zem virsraksta)",
      "default": "<p>Mūsdienīgs dermatoloģijas un estētiskās medicīnas centrs Siguldā – ar jaunākajām tehnoloģijām, profesionālu aprūpi un individuālu pieeju katram pacientam.</p>"
    },

    { "type": "header", "content": "Fona pozīcija" },
    {
      "type": "select",
      "id": "bg_pos_mobile",
      "label": "Pozīcija (mobilajās)",
      "options": [
        { "value": "left", "label": "Pa kreisi (stingri)" },
        { "value": "left-15", "label": "Pa kreisi (pussolis)" },
        { "value": "center", "label": "Centrēt" },
        { "value": "right-15", "label": "Pa labi (pussolis)" },
        { "value": "right", "label": "Pa labi (stingri)" }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "bg_pos_desktop",
      "label": "Pozīcija (dators)",
      "options": [
        { "value": "left", "label": "Pa kreisi (stingri)" },
        { "value": "center", "label": "Centrēt" },
        { "value": "right", "label": "Pa labi (stingri)" }
      ],
      "default": "center"
    },

    { "type": "header", "content": "Virsraksta izlīdzinājums" },
    {
      "type": "select",
      "id": "heading_align",
      "label": "Virsraksta izlīdzinājums",
      "options": [
        { "value": "left", "label": "Pa kreisi (text-left)" },
        { "value": "center", "label": "Centrā (text-center)" },
        { "value": "right", "label": "Pa labi (text-right)" }
      ],
      "default": "left"
    },

    { "type": "header", "content": "Pogu novietojums" },
    {
      "type": "select",
      "id": "button_align_mobile",
      "label": "Mobilajās",
      "options": [
        { "value": "start", "label": "Pa kreisi (justify-start)" },
        { "value": "center", "label": "Centrā (justify-center)" },
        { "value": "end", "label": "Pa labi (justify-end)" }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "button_align_desktop",
      "label": "Dators",
      "options": [
        { "value": "start", "label": "Pa kreisi (md:justify-start)" },
        { "value": "center", "label": "Centrā (md:justify-center)" },
        { "value": "end", "label": "Pa labi (md:justify-end)" }
      ],
      "default": "start"
    }
  ],
  "blocks": [
    {
      "type": "button",
      "name": "Poga",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Uzzināt vairāk",
          "default": "Button"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Button link"
        },
        {
          "type": "select",
          "id": "style",
          "label": "Pogas veids",
          "options": [
            {
              "value": "white",
              "label": "Balta"
            },
            {
              "value": "brown",
              "label": "Brūna"
            },
            {
              "value": "ai",
              "label": "AI"
            }
          ],
          "default": "white"
        }
      ]
    }
  ],
  "max_blocks": 2,
  "presets": [
    {
      "name": "Galvenes sadaļa",
      "blocks": [
        {
          "type": "button",
          "settings": {
            "text": "Pakalpojumi",
            "url": "/pages/services",
            "style": "white"
          }
        },
        {
          "type": "button",
          "settings": {
            "text": "Virtuālais konsultants",
            "url": "#",
            "style": "brown"
          }
        }
      ]
    }
  ]
}
{% endschema %}
