<div class="container mx-auto max-w-5xl transition-hide">
  <div class="mx-4 px-4 md:px-12 text-center py-6 rounded-4xl border-1 border-[#885642] ">
    <h2 class="text-center">{{ section.settings.heading }}</h2>
    <div class="text-center uppercase pb-6">{{ section.settings.text }}</div>
    <div class="grid grid-cols-1 sm:grid-cols-2 sm:grid-rows-2 lg:grid-cols-4 lg:grid-rows-1 gap-4 lg:gap-8">
      {% for block in section.blocks %}
        {% if block.type == 'button' %}
          {% render 'btn-brown',
            text: block.settings.text,
            url: block.settings.url,
            new_tab: block.settings.new_tab,
            full_width: true
          %}
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Kontaktu sadaļa",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Virsraksts",
      "default": "Virsraksts šeit"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Teksts",
      "default": "<p>Jūsu teksts šeit.</p>"
    }
  ],
  "blocks": [
    {
      "type": "button",
      "name": "Poga",
      "settings": [
        { "type": "text", "id": "text", "label": "Poga teksts", "default": "Sazināties" },
        { "type": "url", "id": "url", "label": "Pogas saite" },
        { "type": "checkbox", "id": "new_tab", "label": "Atvērt jaunā cilnē", "default": false }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Kontaktu sadaļa"
    }
  ]
}
{% endschema %}
