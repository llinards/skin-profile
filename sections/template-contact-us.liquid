<div class="container mx-auto px-4 max-w-5xl transition-hide border-1 border-[#885642] rounded-4xl">
  <div class="md:px-12 text-center py-6">
    <h2 class="text-center">{{ section.settings.heading }}</h2>
    <div class="text-center uppercase">{{ section.settings.text }}</div>
    <div class="flex flex-col space-y-2 md:space-x-8 md:justify-between md:flex-row">
      {% for block in section.blocks %}
        {% if block.type == 'button' %}
          <div class="flex-1">
            {% render 'btn-brown',
              text: block.settings.text,
              url: block.settings.url,
              new_tab: block.settings.new_tab,
              full_width: true
            %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Kontaktu sadaļa",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Virsraksts",
      "default": "Virsraksts šeit"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Teksts",
      "default": "<p>Jūsu teksts šeit.</p>"
    }
  ],
  "blocks": [
    {
      "type": "button",
      "name": "Poga",
      "settings": [
        { "type": "text", "id": "text", "label": "Poga teksts", "default": "Sazināties" },
        { "type": "url", "id": "url", "label": "Pogas saite" },
        { "type": "checkbox", "id": "new_tab", "label": "Atvērt jaunā cilnē", "default": false }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Kontaktu sadaļa"
    }
  ]
}
{% endschema %}
