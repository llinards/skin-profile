<div class="container mx-auto lg:max-w-5xl transition-hide pb-12">
  <div class="mx-4 px-4 md:px-12 text-center py-6 rounded-4xl border border-sp-brown">
    <h2 class="text-center">{{ section.settings.heading }}</h2>
    <div class="text-center uppercase pb-6">{{ section.settings.text }}</div>
    <div class="grid grid-cols-1 sm:grid-cols-2 sm:grid-rows-2 lg:grid-cols-4 lg:grid-rows-1 gap-4 lg:gap-8">
      {% for block in section.blocks %}
        {% if block.type == 'button' %}
          {% render 'btn-brown',
            text: block.settings.text,
            url: block.settings.url,
            new_tab: block.settings.new_tab,
            full_width: true
          %}
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Kontaktu sadaļa",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Virsraksts",
      "default": "Sazinies ar mums!"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Teksts",
      "default": "<p>Atrodi sev piemērotāko ādas kopšanas risinājumu jau šodien</p>"
    }
  ],
  "blocks": [
