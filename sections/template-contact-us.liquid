<div class="container mx-auto px-4 max-w-5xl transition-hide border-2 border-sp-brown rounded-4xl">
  <div class="px-8 py-4">
    <h2>{{ section.settings.heading }}</h2>
    <p class="text-center uppercase">{{ section.settings.text }}</p>
    <div class="flex flex-col space-y-2 md:justify-between md:flex-row">
      {% for block in section.blocks %}
        {% if block.type == 'button' %}
          {% render 'btn-brown', text: block.settings.text, url: block.settings.url %}
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Kontaktu sadaļa",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Virsraksts",
      "default": "Virsraksts šeit"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Teksts",
      "default": "<p>Jūsu teksts šeit.</p>"
    }
  ],
  "blocks": [
    {
      "type": "button",
      "name": "Poga",
      "limit": 1,
      "settings": [
        { "type": "text", "id": "text", "label": "Uzzināt vairāk", "default": "Button" },
        { "type": "url", "id": "url", "label": "Button link" },
        {
          "type": "select",
          "id": "style",
          "label": "Pogas veids",
          "options": [{ "value": "brown", "label": "Brūna" }],
          "default": "white"
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Kontaktu sadaļa"
    }
  ]
}
{% endschema %}
