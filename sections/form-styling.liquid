<script src="{{ 'form-custom-select.js' | asset_url }}" defer></script>

{% stylesheet %}
  .globo-form {
    display: flex !important;
    justify-content: center !important;
    margin-bottom: 48px;
  }

  .globo-form-app {
    border: 1px solid #885642;
    border-radius: 1rem !important;
    margin-left: 1rem !important;
    margin-right: 1rem !important;
  }

  .globo-form-app .gfb__content-title {
    font-family: 'Belleza-Regular' !important;
  }

  .globo-form-app .content {
    font-family: 'Manrope-Light' !important;
  }

  .globo-form-app .message {
    margin-bottom: 24px !important;
  }

  .globo-form-control {
    padding: 0px 0px !important;
  }

  .globo-form-app h1 {
    text-align: center !important;
    font-size: 45px;
  }

  .globo-form button {
    border: none !important;
    box-shadow: none !important;
    letter-spacing: var(--tracking-widest);
    border-radius: 0.5rem !important;
  }

  .globo-form button[type='submit'] {
    text-transform: uppercase !important;
    padding: 16px 0px !important;
  }

  .globo-form input {
    border: 1px solid lightgrey !important;
    box-shadow: none !important;
    border-radius: 0.5rem !important;
    padding-left: 12px !important;
    padding-right: 12px !important;
  }

  .globo-form .label-content {
    text-transform: uppercase !important;
    letter-spacing: var(--tracking-widest);
    font-weight: bold;
  }

  .globo-form button:hover {
    background-color: #885642 !important;
    color: #ffffff !important;
  }

  .globo-form .gfb-with-image-img {
    width: 100%;
  }

  .globo-form .iti__flag-container {
    background-color: #e6dac8;
    border-top-left-radius: 0.5rem;
    border-bottom-left-radius: 0.5rem;
  }

  .globo-form input[data-type='phone'] {
    padding-left: 90px !important;
  }

  @layer components {
    /* Hide native select but keep it accessible */
    .sp-sr-only {
      position: absolute !important;
      width: 1px !important;
      height: 1px !important;
      padding: 0 !important;
      margin: -1px !important;
      overflow: hidden !important;
      clip: rect(0 0 0 0) !important;
      white-space: nowrap !important;
      border: 0 !important;
    }

    /* Trigger button: match .globo-form inputs */
    .globo-form .sp-select__btn {
      display: flex;
      align-items: center;
      justify-content: space-between;
      width: 100%;
      text-transform: uppercase;
      text-align: left;
      border: 1px solid lightgrey !important;
      box-shadow: none !important;
      border-radius: 0.5rem !important;
      padding: 8px 12px !important;
      line-height: 1.25rem;
      letter-spacing: var(--tracking-widest);
      transition: background-color 0.2s ease;
    }
    .globo-form .sp-select__btn:hover {
      background: #f9fafb;
    }

    .globo-form .sp-select__chev {
      width: 24px;
      height: 24px;
      border-radius: 9999px;
      padding: 4px;
      transition: transform 0.2s ease;
    }
    .globo-form .is-open .sp-select__chev {
      transform: rotate(180deg);
    }

    /* Panel */
    .globo-form .sp-select__panel {
      position: absolute;
      z-index: 6;
      width: 100%;
      margin-top: 0.5rem;
      background: #fff;
      border: 1px solid lightgrey !important;
      border-radius: 0.5rem;
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.06);
      max-height: 20rem;
      overflow: hidden;
    }

    /* Items */
    .globo-form .sp-select__item {
      display: block;
      width: 100%;
      text-align: left;
      border-radius: 0.25rem;
      padding: 0.5rem !important;
    }
    .globo-form .sp-select__item:hover {
      background: #f3f4f6;
    } /* gray-100 */
    .globo-form .sp-select__item.is-selected {
      background: #f9fafb;
    } /* gray-50 */
  }

  @media screen and (max-width: 768px) {
    .globo-form-app {
      display: flex !important;
      flex-direction: column-reverse !important; /* image goes below */
    }

    .gfb-with-image {
      border-radius: 0 !important;
    }

    .gfb-with-image img {
      border-bottom-right-radius: 1rem;
      border-bottom-left-radius: 1rem;
    }

    .globo-form-app .g-container {
      padding: 2rem !important;
    }
  }

  @media screen and (min-width: 769px) {
    .globo-form-app .g-container {
      padding: 3rem !important;
    }

    .name-input {
      padding: 0px 5px 0px 0px !important;
    }

    .phone-input {
      padding: 0px 0px 0px 5px !important;
    }
  }

  @media screen and (min-width: 1024px) {
    .globo-form-app .g-container {
      padding: 5rem !important;
    }
    .globo-form-app {
      max-width: 1280px !important;
      max-height: 700px !important;
    }
  }
{% endstylesheet %}

