<script src="{{ 'text-with-image-wide-carousel.js' | asset_url }}" defer></script>

<div class="transition-hide bg-(--color-brand-secondary) mb-12 relative md:flex md:min-h-126">
  <div class="container mx-auto md:min-h-126 flex items-center">
    <div class="px-4 py-12 md:w-4/7 flex flex-col space-y-6 md:space-y-12 w-full">
      <h2 class="text-center md:text-left">{{ section.settings.heading }}</h2>
      <div class="space-y-2 text-center md:text-left">
        {{ section.settings.text }}
      </div>

      <div>
        {% for block in section.blocks %}
          {% if block.type == 'button' %}
            <div class="flex justify-center md:justify-start w-full">
              {% case block.settings.style %}
                {% when 'white' %}
                  {% render 'btn-white', text: block.settings.text, url: block.settings.url %}
                {% when 'brown' %}
                  {% render 'btn-brown', text: block.settings.text, url: block.settings.url %}
              {% endcase %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>

  <div class="w-full md:w-3/7 md:absolute md:inset-y-0 md:right-0 md:min-h-126">
    <div class="f-carousel p-0 h-full" id="product-banner-carousel">
      {% assign slide_blocks = section.blocks | where: 'type', 'slide' %}
      {% if slide_blocks.size > 0 %}
        {% for block in slide_blocks %}
          <div class="f-carousel__slide h-full">
            {% if block.settings.url != blank %}<a href="{{ block.settings.url }}" class="block h-full">{% endif %}
            <img
              src="{{ block.settings.image | image_url }}"
              alt="{{ block.settings.alt | escape }}"
              width="1080"
              height="1920"
              loading="lazy"
              class="object-cover w-full h-full"
            >
            {% if block.settings.url != blank %}</a>{% endif %}
          </div>
        {% endfor %}
      {% elsif section.settings.photo %}
        <div class="f-carousel__slide h-full">
          <img
            src="{{ section.settings.photo | image_url }}"
            alt="{{ section.settings.alt | escape }}"
            width="1080"
            height="1920"
            loading="lazy"
            class="object-cover w-full h-full"
          >
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Teksts ar attēlu karuseli",
  "settings": [
    { "type": "text", "id": "heading", "label": "Virsraksts", "default": "Virsraksts šeit" },
    { "type": "richtext", "id": "text", "label": "Teksts", "default": "<p>Jūsu teksts šeit.</p>" },

    // Optional fallback single image (used if no slide blocks added)
    { "type": "image_picker", "id": "photo", "label": "Foto" },
    { "type": "text", "id": "alt", "label": "Bildes alt teksts", "default": "Bildes alt teksts šeit" }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slaids",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Attēls" },
        { "type": "text", "id": "alt", "label": "Alt teksts", "default": "Alt teksts" },
        { "type": "url", "id": "url", "label": "Saite (neobligāti)" }
      ]
    },
    {
      "type": "button",
      "name": "Poga",
      "limit": 1,
      "settings": [
        { "type": "text", "id": "text", "label": "Uzzināt vairāk", "default": "Button" },
        { "type": "url", "id": "url", "label": "Button link" },
        {
          "type": "select",
          "id": "style",
          "label": "Pogas veids",
          "options": [
            { "value": "white", "label": "Balta" },
            { "value": "brown", "label": "Brūna" }
          ],
          "default": "white"
        }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [{ "name": "Teksts ar bildi" }]
}
{% endschema %}
