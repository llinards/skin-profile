<script>
  document.addEventListener('DOMContentLoaded', function () {
    const carousel = Carousel(document.getElementById('services-carousel'), {
      fill: true,
      infinite: false,
      plugins: [window.Dots],
    }).init();
  });
</script>

<div class="{% if section.settings.carousel_desktop == false %}container mx-auto {% endif %} pb-12 transition-hide text-center md:text-left">
  <h2 class="container mx-auto px-4 pb-6 md:pb-12">{{ section.settings.heading }}</h2>

  <!-- GRID -->
  <div class="hidden {% if section.settings.carousel_desktop == false %}xl:flex px-4{% endif %}">
    <div class="grid w-full justify-center items-center xl:grid-rows-2 xl:grid-cols-4 gap-8">
      {% for block in section.blocks %}
        {% if block.settings.photo %}
          <a href="{{ block.settings.url }}" aria-label="{{ block.settings.name | escape }}">
            <div class="relative overflow-hidden h-108 rounded-3xl cursor-pointer flex items-center justify-center group">
              <img
                src="{{ block.settings.photo | image_url }}"
                alt="{{ block.settings.name | escape }}"
                width="1080"
                height="1920"
                loading="lazy"
                class="h-108 w-full object-cover transition-transform duration-300 ease-in-out group-hover:scale-105"
              >
              <div class="absolute inset-0 bg-black/30 w-full flex items-center justify-center px-4">
                <h3 class="text-white text-2xl body-font md:text-3xl leading-tight text-center w-full wrap-break-words line-clamp-2">
                  {{ block.settings.name }}
                </h3>
              </div>
            </div>
          </a>
        {% endif %}
      {% endfor %}
    </div>
  </div>

  <!-- CAROUSEL -->
  <div class="container mx-auto px-4 pb-12 transition-hide {% if section.settings.carousel_desktop == false %}xl:hidden{% endif %}">
    <div class="f-carousel pb-6 md:pb-12" id="services-carousel">
      {% for block in section.blocks %}
        <div class="f-carousel__slide h-full rounded-4xl">
          <a href="{{ block.settings.url }}" aria-label="{{ block.settings.name | escape }}">
            {% if block.settings.photo %}
              <div class="relative overflow-hidden h-108 rounded-3xl cursor-pointer flex items-center justify-center group">
                <img
                  src="{{ block.settings.photo | image_url }}"
                  alt="{{ block.settings.name | escape }}"
                  width="1080"
                  height="1920"
                  loading="lazy"
                  class="h-108 w-full object-cover transition-transform duration-300 ease-in-out group-hover:scale-105"
                >
                <div class="absolute inset-0 bg-black/30 w-full flex items-center justify-center px-4">
                  <h3 class="text-white body-font text-2xl min-[460px]:text-3xl leading-tight text-center w-full wrap-break-words line-clamp-2">
                    {{ block.settings.name }}
                  </h3>
                </div>
              </div>
            {% endif %}
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Pakalpojumu sadaļa",
  "settings": [
    { "type": "text", "id": "heading", "label": "Virsraksts", "default": "Pakalpojumi" },
    { "type": "checkbox", "id": "carousel_desktop", "label": "Pakalpojumu karuselis uz desktopa", "default": false }
  ],
  "blocks": [
    {
      "type": "service",
      "name": "Pakalpojums",
      "settings": [
        { "type": "image_picker", "id": "photo", "label": "Attēls" },
        { "type": "richtext", "id": "name", "label": "Nosaukums" },
        { "type": "url", "id": "url", "label": "Saite" }
      ]
    }
  ],
  "presets": [{ "name": "Pakalpojumu sadaļa" }]
}
{% endschema %}
