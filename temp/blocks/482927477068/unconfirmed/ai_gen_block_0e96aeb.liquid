{% doc %}
  @prompt
    Create a product image thumbnail gallery that displays clickable thumbnails below the main product image when the product has more than one image. The thumbnails should be arranged horizontally, and clicking a thumbnail should update the main product image. Include hover effects on thumbnails and highlight the currently selected thumbnail. Make the gallery responsive and customizable for spacing, thumbnail size, and layout.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-gallery-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.gallery_spacing }}px;
    width: 100%;
  }

  .ai-product-gallery-main-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
    background-color: {{ block.settings.image_background }};
  }

  .ai-product-gallery-main-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
    transition: opacity 0.3s ease;
  }

  .ai-product-gallery-main-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-product-gallery-main-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
  }

  .ai-product-gallery-thumbnails-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.thumbnail_spacing }}px;
    overflow-x: auto;
    padding: 4px 0;
    scrollbar-width: thin;
    scrollbar-color: {{ block.settings.thumbnail_border_color }} transparent;
  }

  .ai-product-gallery-thumbnails-{{ ai_gen_id }}::-webkit-scrollbar {
    height: 6px;
  }

  .ai-product-gallery-thumbnails-{{ ai_gen_id }}::-webkit-scrollbar-track {
    background: transparent;
  }

  .ai-product-gallery-thumbnails-{{ ai_gen_id }}::-webkit-scrollbar-thumb {
    background-color: {{ block.settings.thumbnail_border_color }};
    border-radius: 3px;
  }

  .ai-product-gallery-thumbnail-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.thumbnail_size }}px;
    height: {{ block.settings.thumbnail_size }}px;
    border: 2px solid {{ block.settings.thumbnail_border_color }};
    border-radius: {{ block.settings.thumbnail_border_radius }}px;
    overflow: hidden;
    cursor: pointer;
    transition: all 0.3s ease;
    background-color: {{ block.settings.image_background }};
    opacity: {{ block.settings.thumbnail_opacity }};
  }

  .ai-product-gallery-thumbnail-{{ ai_gen_id }}:hover {
    opacity: 1;
    border-color: {{ block.settings.thumbnail_hover_border_color }};
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .ai-product-gallery-thumbnail-{{ ai_gen_id }}.active {
    opacity: 1;
    border-color: {{ block.settings.thumbnail_active_border_color }};
    box-shadow: 0 0 0 1px {{ block.settings.thumbnail_active_border_color }};
  }

  .ai-product-gallery-thumbnail-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  @media screen and (max-width: 749px) {
    .ai-product-gallery-{{ ai_gen_id }} {
      gap: {{ block.settings.gallery_spacing | times: 0.75 }}px;
    }

    .ai-product-gallery-thumbnail-{{ ai_gen_id }} {
      width: {{ block.settings.thumbnail_size | times: 0.8 }}px;
      height: {{ block.settings.thumbnail_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<product-gallery-{{ ai_gen_id }} class="ai-product-gallery-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-gallery-main-{{ ai_gen_id }}">
    {% if product.images.size > 0 %}
      <img
        src="{{ product.featured_image | image_url: width: 1200 }}"
        alt="{{ product.featured_image.alt | escape }}"
        class="ai-product-gallery-main-image-{{ ai_gen_id }}"
        width="{{ product.featured_image.width }}"
        height="{{ product.featured_image.height }}"
        loading="lazy"
        data-main-image
      >
    {% else %}
      <div class="ai-product-gallery-main-placeholder-{{ ai_gen_id }}">
        {{ 'product-1' | placeholder_svg_tag }}
      </div>
    {% endif %}
  </div>

  {% if product.images.size > 1 %}
    <div class="ai-product-gallery-thumbnails-{{ ai_gen_id }}">
      {% for image in product.images %}
        <button
          type="button"
          class="ai-product-gallery-thumbnail-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
          data-thumbnail-index="{{ forloop.index0 }}"
          aria-label="View image {{ forloop.index }} of {{ product.images.size }}"
        >
          <img
            src="{{ image | image_url: width: 200 }}"
            alt="{{ image.alt | escape }}"
            class="ai-product-gallery-thumbnail-image-{{ ai_gen_id }}"
            width="200"
            height="200"
            loading="lazy"
          >
        </button>
      {% endfor %}
    </div>
  {% endif %}
</product-gallery-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductGallery{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.mainImage = this.querySelector('[data-main-image]');
        this.thumbnails = this.querySelectorAll('[data-thumbnail-index]');
        this.productImages = {{ product.images | json }};
      }

      connectedCallback() {
        this.setupThumbnails();
      }

      setupThumbnails() {
        this.thumbnails.forEach((thumbnail) => {
          thumbnail.addEventListener('click', () => {
            const index = parseInt(thumbnail.dataset.thumbnailIndex);
            this.updateMainImage(index);
            this.updateActiveThumbnail(thumbnail);
          });
        });
      }

      updateMainImage(index) {
        if (!this.mainImage || !this.productImages[index]) return;

        const newImage = this.productImages[index];
        const imageUrl = newImage.src.replace(/\.(jpg|jpeg|png|gif|webp)/, '_1200x.$1');

        this.mainImage.style.opacity = '0';

        setTimeout(() => {
          this.mainImage.src = imageUrl;
          this.mainImage.alt = newImage.alt || '';
          this.mainImage.width = newImage.width;
          this.mainImage.height = newImage.height;
          this.mainImage.style.opacity = '1';
        }, 150);
      }

      updateActiveThumbnail(activeThumbnail) {
        this.thumbnails.forEach((thumb) => {
          thumb.classList.remove('active');
        });
        activeThumbnail.classList.add('active');
      }
    }

    customElements.define('product-gallery-{{ ai_gen_id }}', ProductGallery{{ ai_gen_id }});
  })();
</script>

