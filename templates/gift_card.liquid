{% layout none %}

<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
      {{ 'gift_card.title' | t }}
      -
      {{ shop.name }}
    </title>

    {% render 'meta-tags' %}

    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        line-height: 1.6;
        color: #333;
        background: #f5f5f5;
        padding: 20px 0;
      }

      .giftcard__container {
        max-width: 600px;
        margin: 0 auto;
        background: #fff;
      }

      .giftcard__image {
        width: 100%;
        height: auto;
        display: block;
      }

      .giftcard__content {
        padding: 40px 30px;
      }

      .giftcard__content p {
        margin-bottom: 1em;
      }

      .giftcard__content strong {
        color: {{ shop.email_accent_color | default: '#000' }};
      }

      .giftcard__code {
        background: #f9f9f9;
        border: 2px dashed {{ shop.email_accent_color | default: '#000' }};
        padding: 20px;
        margin: 30px 0;
        text-align: center;
        font-size: 24px;
        font-weight: bold;
        letter-spacing: 2px;
        color: {{ shop.email_accent_color | default: '#000' }};
      }

      .giftcard__balance {
        font-size: 32px;
        font-weight: bold;
        color: {{ shop.email_accent_color | default: '#000' }};
        margin-bottom: 10px;
        text-align: center;
      }

      .giftcard__expires {
        text-align: center;
        font-size: 14px;
        color: #666;
        margin-bottom: 30px;
      }

      .giftcard__button {
        display: inline-block;
        background: {{ shop.email_accent_color | default: '#000' }};
        color: #fff !important;
        text-decoration: none;
        padding: 12px 30px;
        border-radius: 4px;
        font-weight: 600;
        margin: 10px 5px;
        transition: opacity 0.2s;
      }

      .giftcard__button:hover {
        opacity: 0.9;
      }

      .giftcard__actions {
        text-align: center;
        margin: 30px 0;
      }

      .giftcard__wallet {
        text-align: center;
        margin: 20px 0;
      }

      .giftcard__wallet img {
        height: 40px;
        width: auto;
      }

      .giftcard__logo {
        text-align: center;
        margin-top: 40px;
        padding-top: 30px;
        border-top: 1px solid #eee;
      }

      .giftcard__logo img {
        max-width: 200px;
        height: auto;
      }

      .giftcard__expired {
        background: #fee;
        border: 1px solid #fcc;
        color: #c00;
        padding: 15px;
        margin-bottom: 20px;
        border-radius: 4px;
        text-align: center;
      }

      @media print {
        body {
          background: #fff;
          padding: 0;
        }

        .giftcard__button,
        .giftcard__wallet,
        .no-print {
          display: none !important;
        }

        .giftcard__container {
          max-width: 100%;
        }
      }

      @media screen and (max-width: 640px) {
        .giftcard__content {
          padding: 30px 20px;
        }

        .giftcard__code {
          font-size: 18px;
          padding: 15px;
        }

        .giftcard__balance {
          font-size: 24px;
        }
      }
    </style>

    {{ content_for_header }}
  </head>

  <body>
    <div class="giftcard__container">
      <!-- ROW 1: Image -->
      {%- assign giftcard_image_src = 'davanu_karte_cropped.jpg' | file_url -%}
      <img
        src="{{ giftcard_image_src }}"
        alt="{{ 'gift_card.card' | t }}"
        class="giftcard__image"
        width="800px"
        height="800px"
      >

      <!-- ROW 2: Content -->
      <div class="giftcard__content">
        {% if gift_card.enabled == false or gift_card.expired %}
          <div class="giftcard__expired">
            <strong>{{ 'gift_card.expired' | t }}</strong>
          </div>
        {% endif %}

        <div class="giftcard__balance">Bilance: {{ gift_card.balance | money_with_currency }}</div>

        {% if gift_card.expires_on %}
          <div class="giftcard__expires">Derīga līdz: {{ gift_card.expires_on | date: '%d.%m.%Y' }}</div>
        {% endif %}

        <p>
          Dāvanu kartes derīguma termiņš ir
          <strong>
            6 mēneši no iegādes dienas
            {% if gift_card.expires_on %}
              – līdz <span>{{ gift_card.expires_on | date: '%d.%m.%Y' }}</span>.
            {% endif %}
          </strong>
        </p>

        <p>
          <strong>Elektroniskās dāvanu kartes izmantošana internetveikalā</strong><br>
          Veicot apmaksu, Jums būs iespēja ievadīt dāvanu kartes kodu laukā "Atlaižu kods vai dāvanu karte". Pēc koda
          ievadīšanas dāvanu kartes vērtība tiks automātiski atskaitīta no kopējās pirkuma summas.
        </p>

        <div class="giftcard__code">
          {{ gift_card.code | format_code }}
        </div>

        <p>Tavs skaistums sākas šeit.</p>

        <p>
          Ar cieņu,<br>
          <strong style="text-transform: uppercase">{{ shop.name }}</strong>
        </p>

        <div class="giftcard__actions no-print">
          <a href="{{ shop.url }}" class="giftcard__button uppercase"> Apmeklējiet interneta veikalu </a>
        </div>

        {% if gift_card.pass_url %}
          <div class="giftcard__wallet no-print">
            <a href="{{ gift_card.pass_url }}">
              <img
                src="{{ 'gift-card/add-to-apple-wallet.png' | shopify_asset_url }}"
                alt="Add to Apple Wallet"
                width="800px"
                height="800px"
              >
            </a>
          </div>
        {% endif %}

        {% if shop.email_logo_url %}
          <div class="giftcard__logo">
            <img
              src="{{ shop.email_logo_url }}"
              alt="{{ shop.name }}"
              width="800px"
              height="800px"
            >
          </div>
        {% endif %}
      </div>
    </div>
  </body>
</html>
